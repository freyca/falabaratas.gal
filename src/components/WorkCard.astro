---
const { image, title, description } = Astro.props;
---

<article class="prose prose-invert">
    <img
        src={`/${image}`}
        alt={title}
        class="rounded-4xl transition-transform hover:scale-110 duration-300 ease-in-out shadow-2xl/40 shadow-white"
    />
    <div class="justify-center scrolling-section">
        <h2 class="text-2xl font-bold leading-tight">
            {title}
        </h2>
        <p class="text-gray-300">{description}</p>
    </div>
</article>
